{% if pageCount > 1 %}
	<div class="c-pagination">
		<div class="c-pagination__title">Page</div>
		<div class="c-pagination__content">
			{% if previous is defined %}
				<span class="previous">
                    <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
						<twig:ux:icon name="arrow-left" />
					</a>
                </span>
			{% endif %}

			<div class="c-pagination-page">
				<div class="c-pagination-page__current">
					{% for page in pagesInRange %}
						{% if page != current %}
							<span class="page">
                                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                            </span>
						{% else %}
							<span class="current">{{ page }}</span>
						{% endif %}
					{% endfor %}
				</div>
				<div class="c-pagination-page__total">{{ pageCount }}
				</div>
			</div>

			{% if next is defined %}
				<span class="next">
                    <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
						<twig:ux:icon name="arrow-right" />
					</a>
                </span>
			{% endif %}
		</div>
	</div>
{% endif %}

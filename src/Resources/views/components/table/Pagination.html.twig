{% if pageCount > 1 %}
    <div class="c-pagination">
        <div class="c-pagination__title">Page</div>
        <div class="c-pagination__content">
            {% if previous is defined %}
                <span class="previous">
                    <a rel="prev" data-action="live#action" data-live-page-param="{{ previous }}" data-live-action-param="toPage">
                        <twig:ux:icon name="arrow-left"/>
                    </a>
                </span>
            {% endif %}
            <div class="c-pagination-page">
                <div class="c-pagination-page__current">
                    {% for page in pagesInRange %}
                        {% if page != current %}
                            <span class="page">
                                <a data-action="click->live#action" data-live-page-param="{{ page }}" data-live-action-param="toPage">{{ page }}</a>
                            </span>
                        {% else %}
                            <span class="current">{{ page }}</span>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="c-pagination-page__total">{{ pageCount }}
                </div>
            </div>
            {% if next is defined %}
                <span class="next">
                    <a rel="next" data-action="live#action" data-live-page-param="{{ next }}" data-live-action-param="toPage">
                        <twig:ux:icon name="arrow-right"/>
                    </a>
                </span>
            {% endif %}
        </div>
    </div>
{% endif %}
